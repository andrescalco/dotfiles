# react native terminal beauty 
alias anm='adb shell input keyevent 82'
alias anr='adb shell input keyevent 82 && adb shell input keyevent KEYCODE_ENTER && adb shell input keyevent KEYCODE_ENTER'
alias anip='adb reverse tcp:8081 tcp:8081 && adb reverse tcp:9090 tcp:9090'
alias anps='adb exec-out screencap -p > ~/Desktop/app-screenshot-$(date '+%Y-%m-%d-%H-%M-%S').png'

